<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">#0B0C1A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#0B0C1A</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="searchViewStyle">@style/CustomSearchView</item>
        <item name="actionBarTheme">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">#0B0C1A</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
    </style>

    <!-- No Action Bar, Status Bar Dark-->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">#0B0C1A</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- No Action Bar, Status Bar Light -->
    <style name="AppTheme.LightNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">#0B0C1A</item>
        <item name="colorPrimary">#FAFAFA</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CustomSearchView">
        <item name="android:editTextColor">#0B0C1A</item>
        <item name="android:fontFamily">@font/titilliumweb_semibold</item>
        <item name="android:searchIcon">@drawable/ic_icon_search</item>
        <item name="android:tint">#B5B6C4</item>
        <item name="android:textColorHint">#B5B6C4</item>
    </style>
</resources>